<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">



    <TextView
        android:id="@+id/main_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@android:color/background_light"
        android:textSize="@dimen/main_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/assignment_3"
        android:layout_width="@dimen/default_option_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/second_button"
        android:text="@string/ass_3"
        android:textSize="@dimen/header_2"
        app:layout_constraintStart_toStartOf="@+id/assignment_2"
        app:layout_constraintTop_toBottomOf="@+id/assignment_2" />

    <TextView
        android:id="@+id/assignment_2"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@color/second_button"
        android:text="@string/ass_2"
        android:textSize="@dimen/header_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_header" />

    <TextView
        android:id="@+id/assignmnet_2_approve"
        android:layout_width="@dimen/approve_view_width"
        android:layout_height="@dimen/approve_view_height"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/not_approved"
        android:text="@string/not_approved"
        app:layout_constraintBottom_toBottomOf="@+id/assignment_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/assignment_2"
        app:layout_constraintTop_toTopOf="@+id/assignment_2" />

    <TextView
        android:id="@+id/assignmnet_3_approve"
        android:layout_width="@dimen/approve_view_width"
        android:layout_height="@dimen/approve_view_height"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/not_approved"
        android:text="@string/not_approved"
        app:layout_constraintBottom_toBottomOf="@+id/assignment_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/assignment_3"
        app:layout_constraintTop_toTopOf="@+id/assignment_3" />

</androidx.constraintlayout.widget.ConstraintLayout>